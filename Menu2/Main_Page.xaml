<Page x:Class="Menu2.Main_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Menu2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main_Page">

    <Grid x:Name="GrMainPage">
        <Button x:Name="btSettings" Content="Настройки" HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Width="150" Click="btSettings_Click"/>
        <Button x:Name="btPlay" Content="Играть" HorizontalAlignment="Center" Margin="0,105,0,0" VerticalAlignment="Top" Height="40" Width="150" Click="btPlay_Click"/>
        <Button x:Name="btGiveUp" Content="Сдаться" HorizontalAlignment="Center" Margin="0,304,0,0" VerticalAlignment="Top" Height="40" Width="150" Click="btGiveUp_Click"/>

    </Grid>
</Page>

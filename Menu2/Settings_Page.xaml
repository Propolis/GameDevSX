<Page x:Name="Settings" x:Class="Menu2.Settings_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Menu2"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="Settings_Page">
    <Grid x:Name="GridSettings">
        <Grid.Background>
            <ImageBrush ImageSource="/menu2.jpg"/>
        </Grid.Background>
        <Button x:Name="btBack" Content="Назад" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="150" Click="btBack_Click" Margin="29,35,0,0" Grid.RowSpan="2"/>
        <Button x:Name="btGamePlay" Content="Настройки игры" HorizontalAlignment="Center" Margin="0,15,0,0" VerticalAlignment="Top" Height="75" Width="260" Grid.Row="1"/>
        <Button x:Name="btGraphics" Content="Графика" HorizontalAlignment="Center" VerticalAlignment="Top" Height="75" Width="260" Margin="0,333,0,0" Grid.Row="1"/>
        <Button x:Name="btVolume" Content="Звук" HorizontalAlignment="Center" Margin="0,177,0,0" VerticalAlignment="Top" Height="75" Width="260" Grid.Row="1"/>
    </Grid>
</Page>

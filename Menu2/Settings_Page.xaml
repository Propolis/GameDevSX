<Page x:Name="Settings" x:Class="Menu2.Settings_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Menu2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Settings_Page">
    <Grid x:Name="GridSettings" Background="White">
        <Button x:Name="btBack" Content="Назад" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="150" Click="btBack_Click" Margin="29,35,0,0"/>
        <Button x:Name="btGamePlay" Content="Настройки игры" HorizontalAlignment="Center" Margin="0,88,0,0" VerticalAlignment="Top" Height="40" Width="150"/>
        <Button x:Name="btGraphics" Content="Графика" HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Width="150"/>
        <Button x:Name="btVolume" Content="Звук" HorizontalAlignment="Center" Margin="0,324,0,0" VerticalAlignment="Top" Height="40" Width="150"/>

    </Grid>
</Page>
